header.header
  .header__top
    .container
      .header__left 
        - var icons = ['vb', 'vk', 'tw']
            ul.socials
              each icon in icons
                li(class="socials__item socials__item_"+ icon)
                  a(href="#").socials__link
                    .socials__icon
      .header__right
        .address ул. Маяковского 6, офис 17
        a(href="tel:+79211231312").phone +7(921) 1231312
  .header__bottom
    .container
        a(href="#").logo
          img(src="" alt="cooltech logo").logo__img
          .logo__text cooltech
        .search
          form.search__form
            input(name="" type="text" placeholder="Что будем искать").search__form-input
            input(name="" type="submit" value="Найти").search__form-submit
        .menu
          - var items = ["Карта проезда", "История заказов" , "Корзина"]
            ul.menu__list
              li.menu__item
              each item in items
                a(href="#").menu__link= item

